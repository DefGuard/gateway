<acl>
    <page-services-dnsresolver>
        <name>Services: Unbound DNS: General</name>
        <patterns>
            <pattern>services_unbound.php*</pattern>
        </patterns>
    </page-services-dnsresolver>
    <page-services-dnsresolver-acls>
        <name>Services: Unbound DNS: Access Lists</name>
        <patterns>
            <pattern>services_unbound_acls.php*</pattern>
        </patterns>
    </page-services-dnsresolver-acls>
    <page-services-dnsresolver-advanced>
        <name>Services: Unbound DNS: Advanced</name>
        <patterns>
            <pattern>ui/unbound/advanced</pattern>
            <pattern>api/unbound/advanced/*</pattern>
        </patterns>
    </page-services-dnsresolver-advanced>
    <page-services-dnsresolver-overrides>
        <name>Services: Unbound DNS: Edit Host and Domain Override</name>
        <patterns>
            <pattern>ui/unbound/overrides</pattern>
            <pattern>api/unbound/settings/searchHostOverride/*</pattern>
            <pattern>api/unbound/settings/getHostOverride/*</pattern>
            <pattern>api/unbound/settings/setHostOverride/*</pattern>
            <pattern>api/unbound/settings/addHostOverride/*</pattern>
            <pattern>api/unbound/settings/delHostOverride/*</pattern>
            <pattern>api/unbound/settings/toggleHostOverride/*</pattern>
            <pattern>api/unbound/settings/searchHostAlias/*</pattern>
            <pattern>api/unbound/settings/getHostAlias/*</pattern>
            <pattern>api/unbound/settings/setHostAlias/*</pattern>
            <pattern>api/unbound/settings/addHostAlias/*</pattern>
            <pattern>api/unbound/settings/delHostAlias/*</pattern>
            <pattern>api/unbound/settings/toggleHostAlias/*</pattern>
            <pattern>api/unbound/settings/searchDomainOverride/*</pattern>
            <pattern>api/unbound/settings/getDomainOverride/*</pattern>
            <pattern>api/unbound/settings/setDomainOverride/*</pattern>
            <pattern>api/unbound/settings/addDomainOverride/*</pattern>
            <pattern>api/unbound/settings/delDomainOverride/*</pattern>
            <pattern>api/unbound/settings/toggleDomainOverride/*</pattern>
        </patterns>
    </page-services-dnsresolver-overrides>
    <page-diagnostics-logs-resolver>
        <name>Services: Unbound DNS: Log File</name>
        <patterns>
            <pattern>ui/diagnostics/log/core/resolver/*</pattern>
            <pattern>api/diagnostics/log/core/resolver/*</pattern>
        </patterns>
    </page-diagnostics-logs-resolver>
    <page-services-unbound>
        <name>Services: Unbound (MVC)</name>
        <patterns>
            <pattern>ui/unbound/*</pattern>
            <pattern>api/unbound/*</pattern>
        </patterns>
    </page-services-unbound>
</acl>
